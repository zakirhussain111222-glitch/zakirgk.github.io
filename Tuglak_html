<button type="button" onclick="submitQuiz()">Submit</button>
</form>

<h3 id="result"></h3>
</div>

<script>
let time=20*60;
let timer=setInterval(()=>{
let m=Math.floor(time/60),s=time%60;
document.getElementById("timer").innerHTML=`Time: ${m}:${s<10?"0"+s:s}`;
time--; if(time<0){clearInterval(timer);submitQuiz();}
},1000);

function submitQuiz(){
clearInterval(timer);
let score=0;
questions.forEach((q,i)=>{
let opts=document.getElementsByName("q"+i);
opts.forEach(o=>{
if(o.checked){
if(o.value===q[5]){o.parentElement.classList.add("correct");score++;}
else{o.parentElement.classList.add("wrong");}
}
});
});
document.getElementById("result").innerHTML=`Final Score: ${score} / 30`;
}
</script>

