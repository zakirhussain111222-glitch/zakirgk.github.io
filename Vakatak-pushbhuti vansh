{q:"21. चंद्रगुप्त II की पुत्री का विवाह?", options:["हरिषेण","रुद्रसेन II","प्रवरा सेन","सरवर्धन"], answer:1},
{q:"22. हर्ष के दरबार में चीनी यात्री?", options:["फाहियान","ह्वेनसांग","इत्सिंग","मेगास्थनीज"], answer:1},
{q:"23. हर्ष किस धर्म का अनुयायी था?", options:["जैन","बुद्ध","शैव","वैष्णव"], answer:1},
{q:"24. सबसे शक्तिशाली शासक?", options:["प्रभाकरवर्धन","ग्रहवर्मा","हर्षवर्धन","देवगुप्त"], answer:2},
{q:"25. पल्लव वंश का संस्थापक?", options:["महेन्द्रवर्मन","नरसिंहवर्मन","सिंहविष्णु","विष्णुगोप"], answer:2}
];

let form = document.getElementById('quizForm');
quizData.forEach((q,i)=>{
  let div = document.createElement('div');
  div.className = 'question';
  div.innerHTML = `<p><b>${q.q}</b></p>` + q.options.map((opt,j)=>`
    <label><input type='radio' name='q${i}' value='${j}'> ${opt}</label><br>`).join('');
  form.appendChild(div);
});

function submitQuiz(){
  let score=0;
  quizData.forEach((q,i)=>{
    let chosen = document.querySelector(`input[name='q${i}']:checked`);
    let div = document.getElementsByClassName('question')[i];
    if(!chosen) return;
    if(parseInt(chosen.value)==q.answer){ div.classList.add('correct'); score++; }
    else { div.classList.add('wrong'); }
  });
  document.getElementById('result').innerText = `आपका स्कोर: ${score} / ${quizData.length}`;
}
</script>

