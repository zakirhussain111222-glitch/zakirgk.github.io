["तैमूर का आक्रमण वर्ष?","1388","1390","1398","1401","C"],
["तुगलक शासनकाल?","1206–1290","1290–1320","1320–1414","1414–1451","C"],
["तुगलक के बाद वंश?","लोदी","खिलजी","सैय्यद","मुगल","C"]
];

const form=document.getElementById("quizForm");

questions.forEach((q,i)=>{
let div=document.createElement("div");
div.className="question";
div.innerHTML=`<b>${i+1}. ${q[0]}</b><br>
<label><input type="radio" name="q${i}" value="A"> ${q[1]}</label><br>
<label><input type="radio" name="q${i}" value="B"> ${q[2]}</label><br>
<label><input type="radio" name="q${i}" value="C"> ${q[3]}</label><br>
<label><input type="radio" name="q${i}" value="D"> ${q[4]}</label>`;
form.appendChild(div);
});

let time=20*60;
let timer=setInterval(()=>{
let m=Math.floor(time/60),s=time%60;
document.getElementById("timer").innerText=`Time: ${m}:${s<10?"0"+s:s}`;
time--; if(time<0){clearInterval(timer);submitQuiz();}
},1000);

function submitQuiz(){
clearInterval(timer);
let score=0;
questions.forEach((q,i)=>{
document.getElementsByName("q"+i).forEach(o=>{
if(o.checked){
if(o.value===q[5]){o.parentElement.parentElement.classList.add("correct");score++;}
else{o.parentElement.parentElement.classList.add("wrong");}
}
});
});
document.getElementById("result").innerText=`Final Score: ${score} / 30`;
}
</script>

