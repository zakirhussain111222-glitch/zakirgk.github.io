<div id="quiz"></div>

<button type="button" onclick="submitQuiz()">सबमिट करें</button>
</form>

<div class="result" id="resultBox"></div>
</div>

<script>
window.onload = () => {
    const quizDiv = document.getElementById("quiz");
    questions.forEach((obj, i) => {
        let html = `<div class='question'><p>${obj.q}</p>`;
        obj.a.forEach((opt, j) => {
            html += `<label><input type='radio' name='q${i}' value='${j}'> ${opt}</label><br>`;
        });
        html += `</div>`;
        quizDiv.innerHTML += html;
    });
};

function submitQuiz(){
    let score=0;
    let total=questions.length;
    let output="<h3>आपका परिणाम</h3>";

    questions.forEach((obj,i)=>{
        let selected = document.querySelector(`input[name='q${i}']:checked`);
        if(selected && Number(selected.value)===obj.correct){
            score++;
        } else {
            output += `<p><b>Q${i+1}:</b> सही उत्तर: ${obj.a[obj.correct]}</p>`;
        }
    });

    output = `<h2>स्कोर: ${score} / ${total}</h2>` + output;
    document.getElementById("resultBox").style.display="block";
    document.getElementById("resultBox").innerHTML = output;
}
</script>

